// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                  String    @id
  name                String
  email               String    @unique
  password            String?
  role                String
  createdAt           DateTime
  updatedAt           DateTime
  account_activate_at DateTime?

  userToken     UserToken[]
  userCode      UserCode[]
  socialAuths   SocialAuth[]
  ProductRating ProductRating[]

  @@map("user")
}

model UserToken {
  id                      String   @id
  refreshToken            String
  refreshTokenExpiresDate DateTime
  createdAt               DateTime
  user                    User     @relation(fields: [userId], references: [id])
  userId                  String

  @@map("userToken")
}

model UserCode {
  id        String   @id
  code      String
  expiresIn DateTime
  createdAt DateTime
  type      String
  active    Boolean
  userId    String

  user User @relation(fields: [userId], references: [id])
}

model SocialAuth {
  id         String   @id @default(cuid()) // ID único gerado automaticamente
  provider   String // Representa o SocialAuthProvider (ex.: "Google")
  providerId String // ID do provedor (ex.: ID do Google)
  userId     String // ID do usuário associado
  createdAt  DateTime @default(now()) // Data de criação
  updatedAt  DateTime @updatedAt // Atualizado automaticamente na modificação

  // Relacionamento com o modelo User (se existir)
  user User @relation(fields: [userId], references: [id])

  @@index([provider, providerId], name: "provider_providerId_idx") // Índice para buscas rápidas
}

model Product {
  id          String            @id @default(cuid())
  name        String
  description String
  price       Float
  slug        String            @unique
  stored      Int
  active      Boolean
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  categories  ProductCategory[] // Relacionamento com categorias
  ratings     ProductRating[]

  @@map("product")
}

model Category {
  id        String            @id @default(cuid())
  name      String
  slug      String            @unique
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt
  products  ProductCategory[] // Relacionamento com produtos

  @@map("category")
}

model ProductCategory {
  productId  String
  categoryId String
  product    Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@id([productId, categoryId]) // Chave composta para garantir unicidade
  @@map("product_category")
}

model ProductRating {
  id        String   @id @default(cuid())
  rating    Int
  comment   String?
  userId    String
  productId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id])
  product Product @relation(fields: [productId], references: [id])

  @@map("productRating")
}
